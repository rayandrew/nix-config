# 		./z-transfer.sh down "$1"
# 		doAll "$*"
# 		exit
# 	fi
# 	echo " not found "
# 	exit
# fi
#
# echo "  Multiple files exist: "
#
# findme-withpath -p "$ppath" "$1" "$2" "$3"
