#!/usr/bin/env bash

if [ $# == 0 ]; then
	echo ""
	echo "  find . -exec grep (something) '{}' \; -print  | cat -n"
	echo ""
	exit
fi

if [ $# == 1 ]; then
	srcstr="$1"
else
	if [ $# == 2 ]; then
		srcstr="$1.*$2"
	else
		if [ $# == 3 ]; then
			srcstr="$1.*$2.*$3"
		else
			if [ $# == 4 ]; then
				srcstr="$1.*$2.*$3.*$4"
			else
				if [ $# == 5 ]; then
					srcstr="$1.*$2.*$3.*$4.*$5"
				fi
			fi
		fi
	fi
fi

cl

# find . -name "*.java" -exec grep "$*" '{}' \; -print  | cat -n

# find . -name "*.java" -exec grep -i "$srcstr" '{}' \; -print  | cat -n

echo ""

find . -type f -exec \
	grep -i -n "$srcstr" '{}' \; -print |
	sed "s/^/    /" |
	sed "s/^    \.\//-------------------------------------------/" |
	grep -i --color "$srcstr\|-------------------------------------------"

echo ""
