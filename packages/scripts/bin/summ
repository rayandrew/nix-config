#!/usr/bin/env bash

# This was paper-summ, paper-summary before

if [ "x$DIRPAPERS" == "x" ]; then
    echo "   DIRPAPERS environment variable does not exist."
    echo "   check your .bashrc or other .*rc files"
    exit
fi

ppath=$DIRPAPERS/summaries

cd $ppath

if [ $# == 1 ]; then
    str="$1"
else if [ $# == 2 ]; then
    str="$1.*$2"
else if [ $# == 3 ]; then
    str="$1.*$2.*$3"
else if [ $# == 4 ]; then
    str="$1.*$2.*$3.*$4"
fi
fi
fi
fi

filecnt=`find . -name "*" | grep -i "$str" | grep -v '~' | wc -l`
file=`find . -name "*" | grep -i "$str" | grep -v '~'`


if [ $filecnt == 1 ]; then
    echo ""
    echo "  $file "
    echo ""
    echo "  textedit $ppath/$file "
    echo ""

    editor $file
else
    # check if fzf exists
    if command -v fzf &> /dev/null; then
      file=$(find . -name "*" -type f | grep -v '~' | grep -i --color "$str" | fzf --preview "cat {}" --preview-window=right:50%:wrap --header="Choose File" --layout=reverse --border --prompt="File> ")
      if [ "x$file" != "x" ]; then
        echo ""
        echo "  $file "
        echo ""
        # echo "  textedit $ppath/$file "
        echo ""
        editor $file
      fi
    else
      find . -name "*" | grep -v '~' | grep -i --color "$str"
    fi
fi

# exit
# # ================================= OLD STUFF (use findme-withpath)
