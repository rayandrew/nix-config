#!/usr/bin/env bash

# check if NOTES_DIRS env variable exists
if [ -z "$RS_NOTES_DIRS" ]; then
  echo -e "\033[1;31mERROR\033[0m: RS_NOTES_DIRS env variable doesn't exist"
  exit 1
fi

if [ -z "$RS_NOTES_EXTS" ]; then
  RS_NOTES_EXTS="md txt"
fi

# RS_NOTES_DIRS is string with directories separated by space
# convert it to array
NOTES_DIRS=($RS_NOTES_DIRS)

# RS_NOTES_EXTS is string with extensions separated by space
# convert it to array
EXTS=($RS_NOTES_EXTS)

# iterate over NOTES_DIRS
for DIR in $NOTES_DIRS; do
  # check if directory exists
  if [ ! -d "$DIR" ]; then
    # warning, yellow
    echo -e "\033[1;33mWARNING\033[0m: $DIR doesn't exist, skipping..."
    continue
  fi

  # find all files in directory and subdirectories with given extensions
  # bind enter to open file in editor
  # bind ctrl-y to copy file path to clipboard
  # check if MACOS
  if [[ "$OSTYPE" == "darwin"* ]]; then
    find "$DIR" -type f -name "*.${EXTS[0]}" -o -name "*.${EXTS[1]}" | fzf --bind "ctrl-y:execute-silent(echo {} | tr -d '\n' | pbcopy)+abort" --ansi --height 100% --reverse --border --inline-info --preview-window=right:70% --preview 'bat --color=always --style=numbers --line-range :500 {}' --bind "enter:execute(editor {})+abort"
  else
    # linux
    find "$DIR" -type f -name "*.${EXTS[0]}" -o -name "*.${EXTS[1]}" | fzf --bind "ctrl-y:execute-silent(echo {} | tr -d '\n' | xclip -selection clipboard)+abort" --ansi --height 100% --reverse --border --inline-info --preview-window=right:70% --preview 'bat --color=always --style=numbers --line-range :500 {}' --bind "enter:execute(editor {})+abort"
  fi
done
