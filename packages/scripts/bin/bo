#!/usr/bin/env bash

if [ "x$BOOKMARKS_FILE" == "x" ]; then
  echo -e "\033[1;31mERROR\033[0m: BOOKMARKS_FILE env variable doesn't exist"
  exit 1
fi

if [[ ! -f "$BOOKMARKS_FILE" ]]; then
  echo -e "\033[1;31mERROR\033[0m: BOOKMARKS_FILE env variable doesn't exist"
  exit 1
fi

editor "$BOOKMARKS_FILE"
